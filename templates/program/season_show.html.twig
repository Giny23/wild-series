{% extends 'base.html.twig' %}
{% block title %}Wild Series{% endblock %}

{% block body %}
<div class="media">
  {% if vich_uploader_asset(program) %}
    <img class="align-self-start mr-3" src="{{ vich_uploader_asset(program) }}" alt="{{ program.title }} poster">
  {% else %}
    <img class="align-self-start mr-3" src="{{ asset('build/images/' ~ program.poster ~ '.jpg') }}" alt="{{ program.title }} poster">
  {% endif %}
  <div class="media-body">
    <h1 class="mt-0">{{ program.title }}</h1>
    <p>{{ program.synopsis }}</p>
    <p>Catégorie : {{ program.category.name }}</p>
  </div>
  <div class="media-body">
    <h2 class="mt-0">Saison n°: {{ season.number }}</h2>
    <p>Année : {{ season.year }}</p>
    <p>Description : {{ season.description }}</p>
  </div>
  <h2>Liste des épisodes :</h2>
  {% for episode in episodes %}
    <a href="{{ path('program_showEpisode', { 'program': program.id , 'season': season.id , 'episode': episode.id }) }}">{{ episode.number }} : {{ episode.title }}</a>
    <br>
  {% else %}
    <p>Aucun épisode disponible</p>
  {% endfor %}
</div>
{% endblock %}