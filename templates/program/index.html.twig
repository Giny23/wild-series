{% extends 'base.html.twig' %}
{% block title %}Wild Series{% endblock %}

{% block body %}
 <h1>Toutes les séries : </h1>
 {% for program in programs %}
  <div>
   <h2>{{ program.title }} - Catégorie : {{ program.category.name }}</h2>
   <p>{{ program.synopsis }}</p>
   <a href="{{ path('program_show', {'slug': program.slug}) }}">show</a>
   {% if is_granted("ROLE_ADMIN") %}
    <a href="{{ path('program_edit', {'slug': program.slug}) }}">edit</a>
    {% endif %}
  </div>
 {% else %}
  Aucune série trouvée.
 {% endfor %}
 <a href="{{ path("program_new") }}">Ajouter une série</a>
{% endblock %}