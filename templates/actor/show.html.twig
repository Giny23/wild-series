{% extends 'base.html.twig' %}
{% block title %}Wild Series{% endblock %}

{% block body %}
    <div class="media">
        <div class="media-body">
            <h1 class="mt-0">{{ actor.name }}</h1>
            <p>Séries dans lesquels il/elle apparait :</p>
            {% for program in actor.programs %}
                <a href="{{ path('program_show', { 'id': program.id }) }}">Série : {{ program.title }}</a>
                <br>
            {% else %}
                <p>Aucune série disponible</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}